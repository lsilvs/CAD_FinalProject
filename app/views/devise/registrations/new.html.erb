<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <fieldset>
    <legend>Sign up</legend>
    <%= devise_error_messages! %>

    <div class="form-group">
      <%= f.label :phone_number, class: "col-lg-2 control-label", for: "inputPhoneNumber" %>
      <div class="col-lg-3">
        <%= f.text_field :phone_number, autofocus: true, class: "form-control", placeholder: "Phone Number" %>
      </div>
    </div>
    <br style="clear: both;">
    <div class="form-group">
      <%= f.label :currency, class: "col-lg-2 control-label", for: "inputCurrency" %>
      <div class="col-lg-3">
        <%= f.select :currency, [['Euro (€)', '€'], ['Dolar ($)', '$'], ['Real (R$)', 'R$']], { :include_blank=>false }, { :style => 'height: 20px;' } %>
      </div>
    </div>
    <br style="clear: both;">
    <div class="form-group">
      <%= f.label :email, class: "col-lg-2 control-label", for: "inputEmail" %>
      <div class="col-lg-3">
        <%= f.email_field :email, class: "form-control", placeholder: "Email" %>
      </div>
    </div>
    <br style="clear: both;">
    <div class="form-group">
      <%= f.label :password, class: "col-lg-2 control-label", for: "inputPassword" %>
      <div class="col-lg-3">
        <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Password" %>
      </div>
    </div>
    <br style="clear: both;">
    <div class="form-group">
      <%= f.label :password_confirmation, class: "col-lg-2 control-label", for: "inputPasswordConfirmation" %>
      <div class="col-lg-3">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Password Confirmation" %>
      </div>
    </div>
    <br style="clear: both;">
    <div class="form-group">
      <div class="col-lg-3 col-lg-offset-2">
        <button class="btn btn-default">Cancel</button>
        <%= f.submit "Sign up", class: "btn btn-primary" %>
      </div>
    </div>
    <br style="clear: both;">
    <div class="form-group">
      <div class="col-lg-3 col-lg-offset-2">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </fieldset>
<% end %>